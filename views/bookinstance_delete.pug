extends layout

block content
    h1 #{title}: #{bookinstance._id}

    p #[strong Title:] #{bookinstance.book.title}
    p #[strong Status:] #{bookinstance.status}

    p Do you really want to delete this book instance ?

    form(method='POST' action='')
        div.form-group
            input#instanceid(type='hidden',name='instanceid',required='true',value=bookinstance._id)
        button.btn.btn-primary(type='submit') Delete